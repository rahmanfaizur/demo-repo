<!-- views/new.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List</title>
</head>
<body>
    <h1>Todo List</h1>
    
    <form action="/new" method="post">
        <label for="todoTask">Enter new task:</label>
        <input type="text" id="todoTask" name="todoTask" required>
        <button type="submit">Add Task</button>
    </form>

    <h2>Tasks:</h2>
    <ul>
        <% todos.forEach(todo => { %>
            <li><%= todo.todoTask %></li>
        <% }); %>
    </ul>
</body>
</html>
